---
import { ViewTransitions } from 'astro:transitions';
import Navbar from '@/components/navigation/Navbar';
import type { User } from '@supabase/supabase-js';

interface Props {
  title: string;
}

const { title } = Astro.props;
const user = Astro.locals.user as User | null;

import "../styles/globals.css";
---

<!doctype html>
<html lang="pl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | 10x Cards</title>
    <ViewTransitions />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <div class="relative flex min-h-screen flex-col">
      <Navbar client:load user={user} />
      
      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t py-6 md:py-0">
        <div class="container flex flex-col items-center justify-between gap-4 md:h-14 md:flex-row">
          <p class="text-center text-sm leading-loose text-muted-foreground md:text-left">
            &copy; {new Date().getFullYear()} 10x Cards. Wszystkie prawa zastrze≈ºone.
          </p>
        </div>
      </footer>
    </div>
  </body>
</html>
