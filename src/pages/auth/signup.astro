---
import MainLayout from '../../layouts/MainLayout.astro';
import { ViewTransitions } from 'astro:transitions';
import SignUpForm from '../../components/auth/SignUpForm';
---

<MainLayout title="Rejestracja">
  <ViewTransitions />
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto" data-testid="register-page-container">
      <div style="position: relative; z-index: 10; visibility: visible; display: block;" data-testid="register-form-container">
        <div class="w-full max-w-md mx-auto">
          <div class="text-2xl font-bold text-center mb-4">Rejestracja</div>
          <div class="min-h-[300px]">
            <SignUpForm client:load />
          </div>
        </div>
      </div>
      <div class="mt-4 text-center">
        <a href="/auth/login" class="text-blue-600 hover:underline" data-testid="switch-to-login">
          Masz już konto? Zaloguj się
        </a>
      </div>
    </div>
  </div>
</MainLayout>
