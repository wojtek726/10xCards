---
import MainLayout from '../../layouts/MainLayout.astro';
import SignUpForm from '../../components/auth/SignUpForm';
import { ViewTransitions } from 'astro:transitions';
---

<MainLayout title="Rejestracja">
  <ViewTransitions />
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto" data-testid="signup-page-container">
      <h1 class="text-2xl font-bold mb-6 text-center">Rejestracja</h1>
      <div style="position: relative; z-index: 10; visibility: visible; display: block;">
        <SignUpForm client:load />
      </div>
      <div class="mt-4 text-center">
        <a href="/auth/login" class="text-blue-600 hover:underline" data-testid="switch-to-login">Masz już konto? Zaloguj się</a>
      </div>
    </div>
  </div>
</MainLayout>
