---
import MainLayout from '../../layouts/MainLayout.astro';
import { ViewTransitions } from 'astro:transitions';
import { FlashcardService } from '../../lib/services/flashcard.service';
import { createSupabaseServerInstance } from '../../db/supabase.client';

// Parse URL to detect test flag
const url = new URL(Astro.request.url);
const isTestMode = url.searchParams.has('test') || Astro.request.headers.get('x-test-mode') === 'true';

// Get the user from locals (set by middleware) and assert non-null
const user = Astro.locals.user!;

// SSR redirect only when user is not authenticated and not in test mode
if (!user && !isTestMode) {
  return Astro.redirect('/auth/login');
}

// Initialize Supabase client and service
const supabase = createSupabaseServerInstance({ request: Astro.request, cookies: Astro.cookies });
const flashcardService = new FlashcardService(supabase);

// Fetch flashcards with test mode flag
const { flashcards, pagination } = await flashcardService.getFlashcards(user.id, 1, 10, isTestMode);
---

<MainLayout title="Twoje fiszki">
  <ViewTransitions />
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold" data-testid="flashcards-heading">Twoje fiszki</h1>
        <a 
          href="/flashcards/generate" 
          class="inline-flex items-center px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90"
          data-testid="generate-new-flashcards-button"
        >
          Generuj nowe fiszki
        </a>
      </div>
      
      <div class="grid gap-6">
        {flashcards.length === 0 ? (
          <div class="text-center text-muted-foreground">
            <p>Nie masz jeszcze żadnych fiszek.</p>
            <p class="mt-2">Kliknij "Generuj nowe fiszki" aby stworzyć swoją pierwszą kolekcję!</p>
          </div>
        ) : (
          <div class="grid gap-4" data-testid="flashcards-list">
            {flashcards.map((flashcard) => (
              <div class="p-6 bg-card rounded-lg shadow-sm border">
                <div class="mb-4">
                  <h3 class="font-semibold text-lg mb-2">Przód</h3>
                  <p class="text-muted-foreground">{flashcard.front}</p>
                </div>
                <div>
                  <h3 class="font-semibold text-lg mb-2">Tył</h3>
                  <p class="text-muted-foreground">{flashcard.back}</p>
                </div>
                <div class="mt-4 text-sm text-muted-foreground">
                  Utworzono: {new Date(flashcard.created_at).toLocaleDateString('pl-PL')}
                </div>
              </div>
            ))}
          </div>
        )}
      </div>
    </div>
  </div>
</MainLayout> 